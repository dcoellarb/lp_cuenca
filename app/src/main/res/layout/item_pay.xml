<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/datafast"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:id="@+id/item_inner_container"
        android:background="@color/default_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pay_item_image"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/datafast"/>
        <TextView
            android:id="@+id/pay_item_text"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/lp_grey"
            android:textSize="14pt"
            android:gravity="center_vertical"
            android:text="Datafast"/>
    </LinearLayout>
</LinearLayout>