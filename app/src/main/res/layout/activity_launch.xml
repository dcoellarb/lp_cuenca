<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">
    <ImageView
        android:id="@+id/main_image_background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tutorial2"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/main_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tutorial1"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="12pt"
            android:fontFamily="Roboto"
            android:text="Que es lockphone?"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_iniciar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lp_red">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="INICIAR"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
