<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/launch_pager_indicator1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:background="@drawable/pager_indicator"/>
            <LinearLayout
                android:id="@+id/launch_pager_indicator2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:background="@drawable/pager_indicator"/>
            <LinearLayout
                android:id="@+id/launch_pager_indicator3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:background="@drawable/pager_indicator_active"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12pt"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:text="Selecciona tu forma de pago"
            android:gravity="center"/>
        <ListView
            android:id="@+id/pay_list"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center|center"
        android:background="@color/lp_red"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="COMPRAR" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_progressbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_transparent_high"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/pay_progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|center"/>
    </LinearLayout>
</RelativeLayout>
