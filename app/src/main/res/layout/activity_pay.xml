<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="3"
                android:fontFamily="sans-serif"
                android:textSize="20pt"
                android:textColor="@color/white"
                android:gravity="center|center"
                android:background="@drawable/pager_indicator_active"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="10pt"
                    android:fontFamily="sans-serif"
                    android:text="Selecciona tu forma de pago"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:lines="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Se procesara el pago con el proveedor de tu preferencia, Lockphone no almacena la informacion del medio de pago"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@drawable/shadow"
        android:layout_marginTop="100dp">
    </View>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp">
        <ListView
            android:id="@+id/pay_list"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center|center"
        android:background="@color/lp_red"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="COMPRAR" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/continue_disable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center|center"
        android:background="@color/lp_grey"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_gravity="center|center"
            android:src="@drawable/ic_signal_wifi_off_white_48dp"/>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="6pt"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-light"
                android:text="No hay conexion a Internet"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="5pt"
                android:fontFamily="sans-serif-light"
                android:text="Por favor intente mas tarde"/>
            <Button
                android:id="@+id/continue_disable_try_again"
                android:layout_marginRight="5dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/button_white_border"
                android:text="Reintentar"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_progressbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent_low"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/pay_progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|center"/>
    </LinearLayout>
</RelativeLayout>
